extends layout

block content
  style.
    .about-hero {
      text-align: center;
      padding: 3rem 0;
      background: linear-gradient(135deg, #2d6b3d 0%, #1e4d2b 100%);
      color: #f0ead6;
      border-radius: 8px;
      margin-bottom: 3rem;
    }
    
    .about-hero h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      letter-spacing: 2px;
    }
    
    .about-content {
      max-width: 800px;
      margin: 0 auto;
    }
    
    .about-section {
      margin-bottom: 3rem;
      padding: 2rem;
      background: white;
      border-radius: 8px;
      border-left: 4px solid #1e4d2b;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    
    .about-section h2 {
      color: #1e4d2b;
      margin-bottom: 1rem;
      font-size: 1.8rem;
    }
    
    .about-section p {
      line-height: 1.8;
      color: #444;
      margin-bottom: 1rem;
    }
    
    .values-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }
    
    .value-card {
      text-align: center;
      padding: 1.5rem;
      background: #f0ead6;
      border-radius: 8px;
      transition: transform 0.3s;
    }
    
    .value-card:hover {
      transform: translateY(-5px);
    }
    
    .value-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    
    .value-title {
      font-size: 1.1rem;
      font-weight: bold;
      color: #1e4d2b;
      margin-bottom: 0.5rem;
    }
    
    .value-desc {
      font-size: 0.9rem;
      color: #666;
    }

