    }
    
    .categories {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }
    
    .category-btn {
      padding: 0.6rem 1.5rem;
      background: #f0ead6;
      color: #1e4d2b;
      border: 2px solid #d4c5a9;
      border-radius: 20px;
      cursor: pointer;
      font-size: 0.95rem;
      transition: all 0.3s;
    }
    
    .category-btn:hover,
    .category-btn.active {
