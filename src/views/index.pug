doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    script(src="https://unpkg.com/axios/dist/axios.min.js")
    title= title
    style.
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
      }
      .container {
        background: white;
        border-radius: 10px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
      }
      h1 {
        color: #667eea;
        text-align: center;
        margin-bottom: 10px;
      }
      .subtitle {
        text-align: center;
        color: #666;
        margin-bottom: 40px;
        font-size: 1.2em;
      }
      .endpoints {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 30px;
      }
      .endpoint-card {
        border: 2px solid #667eea;
        border-radius: 8px;
        padding: 20px;
        transition: transform 0.2s, box-shadow 0.2s;
      }
      .endpoint-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
      }
      .endpoint-card h3 {
        color: #667eea;
        margin-top: 0;
      }
      .endpoint-card ul {
        list-style: none;
        padding: 0;
      }
      .endpoint-card li {
        padding: 8px 0;
        border-bottom: 1px solid #eee;
      }
      .endpoint-card li:last-child {
        border-bottom: none;
      }
      .method {
        display: inline-block;
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.85em;
        font-weight: bold;
        margin-right: 10px;
      }
      .get { background: #61affe; color: white; }
      .post { background: #49cc90; color: white; }
      .delete { background: #f93e3e; color: white; }
      .footer {
        text-align: center;
        margin-top: 40px;
        color: #666;
        font-size: 0.9em;
      }
  body
    .container
      h1 üõí #{title}
      p.subtitle #{message}
      
      .endpoints
        .endpoint-card
          h3 üë§ User Endpoints
          ul
            li
              span.method.get GET
              | /user - Get all users
            li
              span.method.get GET
              | /user/:id - Get user by ID
            li
              span.method.post POST
              | /user - Create new user
            li
              span.method.delete DELETE
              | /user/:id - Delete user
            li
              span.method.delete DELETE
              | /user - Delete multiple users
        
        .endpoint-card
          h3 üì¶ Product Endpoints
          ul
            li
              span.method.get GET
              | /product - Get all products
            li
              span.method.get GET
              | /product/:id - Get product by ID
            li
              span.method.post POST
              | /product - Create new product
            li
              span.method.delete DELETE
              | /product/:id - Delete product
            li
              span.method.delete DELETE
              | /product - Delete multiple products
        
        .endpoint-card
          h3 üè∑Ô∏è Category Endpoints
          ul
            li
              span.method.get GET
              | /category - Get all categories
            li
              span.method.get GET
              | /category/:id - Get category by ID
            li
              span.method.post POST
              | /category - Create new category
            li
              span.method.delete DELETE
              | /category/:id - Delete category
            li
              span.method.delete DELETE
              | /category - Delete multiple categories
      
      .footer
        p Server running on port 3000
