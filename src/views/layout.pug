doctype html
html(lang="tr")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
   
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet">
   
    title= title || 'MESK - Arapça Hat Sanatı'
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Manrope', 'Georgia', 'Times New Roman', serif;
        background: #fdfbf7;
        color: #2c3e2c;
        line-height: 1.6;
      }
      
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }
      
      /* Header */
      .main-header {
        background: #1e4d2b;
        padding: 1.5rem 0;
        box-shadow: 0 2px 8px rgba(30, 77, 43, 0.1);
        position: sticky;
        top: 0;
        z-index: 100;
      }
      
      .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      
      .logo a {
        font-size: 2rem;
        font-weight: 700;
        color: #f0ead6;
        text-decoration: none;
        letter-spacing: 3px;
        font-family: 'Georgia', serif;
      }
      
      .main-nav {
        flex: 1;
        display: flex;
        justify-content: center;
      }
      
      .main-nav ul {
        display: flex;
        list-style: none;
        gap: 2rem;
      }
      
      .main-nav a {
        color: #d4c5a9;
        text-decoration: none;
        font-size: 1rem;
        transition: color 0.3s;
      }
      
      .main-nav a:hover {
        color: #f0ead6;
      }
      
      .header-actions {
        display: flex;
        align-items: center;
        gap: 1.5rem;
      }
      
      .icon-link {
        position: relative;
        color: #f0ead6;
        text-decoration: none;
        transition: transform 0.2s;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      
      .icon-link:hover {
        transform: scale(1.05);
      }
      
      .icon-link svg {
        display: block;
      }
      
      .cart-count {
        position: absolute;
        top: -8px;
        right: -10px;
        background: #c79a5c;
        color: white;
        font-size: 0.7rem;
        padding: 2px 6px;
        border-radius: 10px;
        font-weight: bold;
      }
      
      .login-text {
        opacity: 0;
        position: absolute;
        left: -80px;
        white-space: nowrap;
        background: #2d6b3d;
        padding: 0.3rem 0.8rem;
        border-radius: 4px;
        font-size: 0.85rem;
        pointer-events: none;
        transition: opacity 0.3s;
      }
      
      .login-link:hover .login-text {
        opacity: 1;
      }
      
      /* Main Content */
      main {
        min-height: calc(100vh - 200px);
        padding: 3rem 0;
      }
      
      /* Footer */
      .main-footer {
        background: #1e4d2b;
        color: #d4c5a9;
        padding: 2rem 0;
        margin-top: 4rem;
        border-top: 3px solid #2d6b3d;
      }
      
      .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
      }
      
      .footer-section {
        flex: 1;
      }
      
      .copyright {
        color: #d4c5a9;
        font-size: 0.9rem;
      }
      
      .social-links {
        display: flex;
        gap: 1.5rem;
        justify-content: flex-end;
      }
      
      .social-links a {
        color: #d4c5a9;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s;
      }
      
      .social-links a:hover {
        color: #f0ead6;
      }
      
      @media (max-width: 768px) {
        .header-content {
          flex-direction: column;
          gap: 1rem;
        }
        
        .main-nav ul {
          gap: 1rem;
        }
        
        .footer-content {
          flex-direction: column;
          text-align: center;
        }
        
        .social-links {
          justify-content: center;
        }
      }
  body
    include header
    main
      .container
        block content
    include footer